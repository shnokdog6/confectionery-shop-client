{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES5",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "paths": {
            "@images/*": ["./public/images/*"],
            "@shared/*": ["./src/shared/*"],
            "@widgets/*": ["./src/widgets/*"],
            "@entities/*": ["./src/entities/*"],
            "@features/*": ["./src/features/*"],
            "@pages/*": ["./src/pages/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "exclude": ["node_modules"]
}
